<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/item_diary_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020년 11월 14일" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_diary_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="요호호호" />

        <ImageView
            android:id="@+id/item_diary_iv_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="6dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_image_24"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_diary_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="오후 9:20" />

        <TextView
            android:id="@+id/item_diary_feeling"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:text="기분 :" />

        <TextView
            android:id="@+id/item_diary_tv_feeling"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="좋음" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="점" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_diary_iv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_room_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/item_diary_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="엘림하우스" />
    </LinearLayout>

</LinearLayout>