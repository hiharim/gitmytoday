<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WRITE"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/activity_write_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="오늘은.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


    </EditText>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


<!--        <ImageButton-->
<!--            android:id="@+id/activity_write_image_btn_camera"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="0.1"-->
<!--            app:srcCompat="@drawable/ic_baseline_add_a_photo_24"-->
<!--            tools:ignore="VectorDrawableCompat" />-->

        <ImageButton
            android:id="@+id/activity_write_image_btn_location"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_room_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:text="기분 :" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </Spinner>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:text="점" />

        <TextView
            android:id="@+id/activity_write_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:textSize="14dp"
            android:text="2020/11/14" />

        <TextView
            android:id="@+id/activity_write_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:layout_marginTop="13dp"
            android:text="오후 6:30"
            android:textSize="14dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/activity_write_iv_photo"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="297dp"
        android:layout_marginRight="297dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_write_et_content"
        app:srcCompat="@drawable/ic_baseline_insert_photo_24"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_write_iv_photo">

<!--        <ImageView-->
<!--            android:id="@+id/activity_write_iv_location"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            app:srcCompat="@drawable/ic_baseline_room_24"-->
<!--            tools:ignore="VectorDrawableCompat" />-->

        <TextView
            android:id="@+id/activity_write_tv_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>